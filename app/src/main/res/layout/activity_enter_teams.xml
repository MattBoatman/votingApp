<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".EnterTeams">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/schoolName"
        android:layout_gravity="left|top"
        android:text="Add School"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="enterSchoolClick"
        android:text="Enter School"
        android:id="@+id/enterSchool"
        android:layout_gravity="center_horizontal|top"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/schoolSpinner"
        android:layout_alignEnd="@+id/schoolSpinner" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/schoolSpinner"
        android:layout_gravity="right|top"
        android:layout_below="@+id/enterSchool"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/teamName"
        android:layout_gravity="left|top"
        android:text="Team Name"
        android:layout_alignBaseline="@+id/enterTeam"
        android:layout_alignBottom="@+id/enterTeam"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="enterTeamClick"
        android:text="Enter Team"
        android:id="@+id/enterTeam"
        android:layout_gravity="center_horizontal|top"
        android:layout_below="@+id/schoolSpinner"
        android:layout_alignRight="@+id/schoolSpinner"
        android:layout_alignEnd="@+id/schoolSpinner"
        android:layout_marginTop="66dp" />

</RelativeLayout>
