<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ResultsScreen">

    <ScrollView android:layout_height="300dip"
        android:layout_width="match_parent"
        android:id="@+id/scrollview1"
        android:layout_below="@+id/schoolSpinnerResults"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="25dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/cat1View"

        android:editable="false"
        android:textIsSelectable="true"
        android:clickable="true"
        android:text="Most Creative Results:"
        android:textSize="20dp" />
    </ScrollView>

    <ScrollView android:layout_height="300dip"
        android:layout_width="match_parent"
        android:id="@+id/scrollview2"
        android:layout_below="@+id/scrollview1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="25dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/cat2View"
        android:text="Most User Friendly Results"
        android:maxLines = "20"
        android:scrollbars = "vertical"
        android:textSize="20dp" />
    </ScrollView>


    <ScrollView android:layout_height="300dip"
        android:layout_width="match_parent"
        android:id="@+id/scrollview3"
        android:layout_below="@+id/scrollview2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/cat3View"
        android:layout_below="@+id/cat2View"
        android:text="Best Overall Results: "
        android:maxLines = "20"
        android:scrollbars = "vertical"
        android:textSize="20dp" />
    </ScrollView>

    <Spinner
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/schoolSpinnerResults"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Most Creative"
        android:id="@+id/textView"
        android:layout_above="@+id/scrollview1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Most User Friendly"
        android:id="@+id/textView2"
        android:layout_above="@+id/scrollview2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Best Overall"
        android:id="@+id/textView3"
        android:layout_above="@+id/scrollview3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20dp" />
</RelativeLayout>
